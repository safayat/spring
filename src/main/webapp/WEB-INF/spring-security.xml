<beans:beans xmlns="http://www.springframework.org/schema/security"
             xmlns:beans="http://www.springframework.org/schema/beans"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
	http://www.springframework.org/schema/security
	http://www.springframework.org/schema/security/spring-security-3.1.xsd">


    <!-- enable use-expressions -->
    <http auto-config="true" use-expressions="true">
        <intercept-url pattern="/private/*" access= "hasRole('ROLE_USER')"/>
        <intercept-url pattern="/admin/private/*" access= "hasRole('ROLE_ADMIN')"/>
        <intercept-url pattern="/edu/private/*" access= "hasRole('ROLE_TEACHER')"/>
        <intercept-url pattern="/stu/private/*" access= "hasRole('ROLE_STUDENT')"/>
        <intercept-url pattern="/stff/private/*" access= "hasRole('ROLE_STAFF')"/>
        <intercept-url pattern="/grd/private/*" access= "hasRole('ROLE_GUARDIAN')"/>

        <!-- access denied page -->
        <access-denied-handler error-page="/403" />
        <form-login
                login-page="/login.web"
                default-target-url="/private/home.web"
                authentication-failure-url="/login.web?error"
                username-parameter="username"
                password-parameter="password" />
        <logout logout-success-url="/login.web?logout" />
        <!-- enable csrf protection -->
    </http>

    <authentication-manager>
        <authentication-provider user-service-ref="loginAuthenticationService">
            <password-encoder ref="encoder" />
        </authentication-provider>
    </authentication-manager>

    <beans:bean id="loginAuthenticationService" class="com.mkyong.login.service.LoginAuthenticationService">
    </beans:bean>
    <beans:bean id="encoder"
        class="org.springframework.security.crypto.bcrypt.BCryptPasswordEncoder">
        <beans:constructor-arg name="strength" value="11" />
    </beans:bean>

</beans:beans>